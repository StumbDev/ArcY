{
  "name": "arcy",
  "version": "0.0.2",
  "description": "A modern CLI tool for web development",
  "license": "MIT",
  "author": {
    "name": "Stumbdev",
    "email": "stumbledeveloper@hotmail.com"
  },
  "type": "commonjs",
  "bin": {
    "arcy": "./dist/cli.js"
  },
  "scripts": {
    "start": "node dist/cli.js",
    "build": "tsc",
    "build:exe": "npm run build && pkg .",
    "build:all": "npm run build:ui && npm run build:exe"
  },
  "pkg": {
    "scripts": "dist/**/*.js",
    "assets": [
      "web/dist/**/*",
      "node_modules/**/*"
    ],
    "targets": [
      "node18-linux-x64",
      "node18-macos-x64",
      "node18-win-x64"
    ],
    "outputPath": "build/bin"
  },
  "dependencies": {
    "autoprefixer": "^10.4.20",
    "axios": "^1.7.7",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "cssnano": "^7.0.6",
    "express": "^4.18.2",
    "jsdom": "^25.0.1",
    "node-fetch": "^2.6.7",
    "node-html-parser": "^6.1.13",
    "postcss": "^8.4.47",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4",
    "vite": "^4.3.9"
  },
  "devDependencies": {
    "@types/node": "^20.3.1",
    "@vitejs/plugin-react": "^4.0.0",
    "pkg": "^5.8.1",
    "typescript": "^5.0.4"
  }
}
